#page_form
  = form_for :page, url(:pages, :update_layout, :id => @page.id), :method => :put, :class => 'form-horizontal' do |f|
    .form-group
      .col-md-1.col-md-offset-3
        = f.label 'Layout', :for => :layout, class: 'control-label'
      .col-md-4
        = f.select :layout, :options => Layout.as_hash.to_a, :id => "layout_select", :class => "form-control input-large input-with-feedback"
  #layout
    = partial "pages/#{@page.layout}", :locals => { :page => @page }

