            %li=link_to "Map", '/map', :class => 'navbar-nav-link'
          %ul.nav.navbar-nav
            %li=link_to "Wir", '/wir', :class => 'navbar-nav-link'
          %ul.nav.navbar-nav
            %li=link_to "Sponsoren", '/sponsoren', :class => 'navbar-nav-link'
