      = yield

    = javascript_include_tag 'jquery-1.11.0.min', (Padrino.env == :production ? %w[bootstrap/bootstrap.min jquery.fullPage.min] : %w[bootstrap/alert bootstrap/button bootstrap/dropdown bootstrap/modal bootstrap/tab jquery.fullPage.js]), :application, :map

